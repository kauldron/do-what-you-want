<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#e0e0e0</item>
    </style>

    <style name="Regular.Variant" parent="Regular">
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="Medium" parent="Regular">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Title" parent="Medium">
        <item name="android:textSize">24sp</item>
    </style>

</resources>